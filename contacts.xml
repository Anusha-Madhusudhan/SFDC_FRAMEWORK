			<class name="com.tekarck.testCases.TC29_ContactPage"></class>
			<class name="com.tekarck.testCases.TC30_VerifyTheContactErrorMsg"></class>
			<class name="com.tekarck.testCases.TC31_VerifyTheCancelButton"></class>
			<class name="com.tekarck.testCases.TC32_VerifySaveAndNewButton"></class>
		</classes>
	</test>
	
	<test name="FIREFOX">
		<parameter name="browser" value="firefox"></parameter>
	    <parameter name="URL" value="https://login.salesforce.com/"></parameter>
	    <parameter name="isHeadless" value="true"></parameter>
	    <classes>
			<class name="com.tekarck.testCases.TC25_CreateNewContact"></class>
			<class name="com.tekarck.testCases.TC26_CreateNewViewInTheContactPage"></class>
