<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Leads">
	<listeners>
		<listener class-name="com.tekarch.listeners.SFDC_Listener"></listener>
	</listeners>
	<test name="CHROME">
		<parameter name="browser" value="chrome"></parameter>
	    <parameter name="URL" value="https://login.salesforce.com/"></parameter>
	    <parameter name="isHeadless" value="true"></parameter>
	    <classes>
			<class name="com.tekarck.testCases.TC20_LeadsTab"></class>
			<class name="com.tekarck.testCases.TC21_LeadsSelectView"></class>
			<class name="com.tekarck.testCases.TC22_DefaultView"></class>
			<class name="com.tekarck.testCases.TC23_ListItemTodaysLeadswork"></class>
			<class name="com.tekarck.testCases.TC24_CheckNewButtonOnLeadsHome"></class>
		</classes>
	</test>
	
	<test name="EDGE">
		<parameter name="browser" value="edge"></parameter>
	    <parameter name="URL" value="https://login.salesforce.com/"></parameter>
	    <parameter name="isHeadless" value="true"></parameter>
	    <classes>
			<class name="com.tekarck.testCases.TC20_LeadsTab"></class>
			<class name="com.tekarck.testCases.TC21_LeadsSelectView"></class>
			<class name="com.tekarck.testCases.TC22_DefaultView"></class>
			<class name="com.tekarck.testCases.TC23_ListItemTodaysLeadswork"></class>
			<class name="com.tekarck.testCases.TC24_CheckNewButtonOnLeadsHome"></class>
		</classes>
	</test>
	
	<test name="FIREFOX">
		<parameter name="browser" value="firefox"></parameter>
	    <parameter name="URL" value="https://login.salesforce.com/"></parameter>
	    <parameter name="isHeadless" value="true"></parameter>
	    <classes>
			<class name="com.tekarck.testCases.TC20_LeadsTab"></class>
			<class name="com.tekarck.testCases.TC21_LeadsSelectView"></class>
			<class name="com.tekarck.testCases.TC22_DefaultView"></class>
			<class name="com.tekarck.testCases.TC23_ListItemTodaysLeadswork"></class>
			<class name="com.tekarck.testCases.TC24_CheckNewButtonOnLeadsHome"></class>
		</classes>
	</test>
	
</suite>