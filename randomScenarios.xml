<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="RandomScinarios">
	<listeners>
		<listener class-name="com.tekarch.listeners.SFDC_Listener"></listener>
	</listeners>
	<test name="CHROME">
		<parameter name="browser" value="chrome"></parameter>
	    <parameter name="URL" value="https://login.salesforce.com/"></parameter>
	    <parameter name="isHeadless" value="true"></parameter>
	    <classes>
			<class name="com.tekarck.testCases.TC33_VerifyFirstNameAndLastNameOnHomePage"></class>
			<class name="com.tekarck.testCases.TC34_VerifyUpdatedLastName"></class>
			<class name="com.tekarck.testCases.TC35_VerifyTabCustomizationTab"></class>
			<class name="com.tekarck.testCases.TC36_BlockingAnEventInTheCalender"></class>
			<class name="com.tekarck.testCases.TC37_BlockingAnEventInTheCalenderWithWeeklyRecurrance"></class>
		</classes>
	</test>
	
	<test name="EDGE">
		<parameter name="browser" value="edge"></parameter>
	    <parameter name="URL" value="https://login.salesforce.com/"></parameter>
	    <parameter name="isHeadless" value="true"></parameter>
	    <classes>
			<class name="com.tekarck.testCases.TC33_VerifyFirstNameAndLastNameOnHomePage"></class>
			<class name="com.tekarck.testCases.TC34_VerifyUpdatedLastName"></class>
			<class name="com.tekarck.testCases.TC35_VerifyTabCustomizationTab"></class>
			<class name="com.tekarck.testCases.TC36_BlockingAnEventInTheCalender"></class>
			<class name="com.tekarck.testCases.TC37_BlockingAnEventInTheCalenderWithWeeklyRecurrance"></class>
		</classes>
	</test>
	
	<test name="FIREFOX">
		<parameter name="browser" value="firefox"></parameter>
	    <parameter name="URL" value="https://login.salesforce.com/"></parameter>
	    <parameter name="isHeadless" value="true"></parameter>
	    <classes>
			<class name="com.tekarck.testCases.TC33_VerifyFirstNameAndLastNameOnHomePage"></class>
			<class name="com.tekarck.testCases.TC34_VerifyUpdatedLastName"></class>
			<class name="com.tekarck.testCases.TC35_VerifyTabCustomizationTab"></class>
			<class name="com.tekarck.testCases.TC36_BlockingAnEventInTheCalender"></class>
			<class name="com.tekarck.testCases.TC37_BlockingAnEventInTheCalenderWithWeeklyRecurrance"></class>
		</classes>
	</test>
	
</suite>